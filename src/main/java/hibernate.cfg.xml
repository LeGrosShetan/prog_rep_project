<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="connection.url">jdbc:mariadb://localhost:3306/permispiste</property>
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="connection.username">userepul</property>
        <property name="connection.password">epul</property>
        <mapping class="com.epul.permispiste.domains.ActionEntity"/>
        <mapping class="com.epul.permispiste.domains.ApprenantEntity"/>
        <mapping class="com.epul.permispiste.domains.CalendrierEntity"/>
        <mapping class="com.epul.permispiste.domains.IndicateurEntity"/>
        <mapping class="com.epul.permispiste.domains.InscritEntity"/>
        <mapping class="com.epul.permispiste.domains.JeuEntity"/>
        <mapping class="com.epul.permispiste.domains.MissionEntity"/>
        <mapping class="com.epul.permispiste.domains.ObjectifEntity"/>
        <mapping class="com.epul.permispiste.domains.ObtentionEntity"/>
        <mapping class="com.epul.permispiste.domains.RegleEntity"/>

        <!-- <property name="connection.username"/> -->
        <!-- <property name="connection.password"/> -->

        <!-- DB schema will be updated if needed -->
        <!-- <property name="hibernate.hbm2ddl.auto">update</property> -->
    </session-factory>
</hibernate-configuration>